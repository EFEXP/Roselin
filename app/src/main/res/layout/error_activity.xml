<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:layout_editor_absoluteX="0dp"
  tools:layout_editor_absoluteY="81dp">

  <TextView
    android:id="@+id/error_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:text="@string/no_network"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.45"/>
  <xyz.donot.roselinx.view.custom.CustomButton
    android:id="@+id/button_retry"
    android:layout_width="0dp"
    android:layout_height="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:buttonSrc="@drawable/ic_info_outline_grey_400_36dp"
    app:buttonText="タップして再試行"
    app:layout_constraintEnd_toEndOf="@+id/error_message"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="@+id/error_message"
    app:layout_constraintTop_toBottomOf="@+id/error_message"
    />
</android.support.constraint.ConstraintLayout>