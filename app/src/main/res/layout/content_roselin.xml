<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:layout_editor_absoluteX="0dp"
  tools:layout_editor_absoluteY="81dp">
  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/iv_connected_stream"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <xyz.donot.roselinx.view.custom.UserDetailView
    android:id="@+id/user_detail_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/iv_connected_stream"/>
  <xyz.donot.roselinx.view.custom.CustomButton
    android:id="@+id/bt_profile"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:buttonSrc="@drawable/ic_account_circle"
    app:buttonText="プロフィール"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/user_detail_view"/>
  <xyz.donot.roselinx.view.custom.CustomButton
    android:id="@+id/bt_setting"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:buttonSrc="@drawable/ic_settings_grey_400_36dp"
    app:buttonText="設定"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_profile"/>

  <xyz.donot.roselinx.view.custom.CustomButton
    android:id="@+id/bt_account"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="16dp"
    app:buttonSrc="@drawable/ic_contacts_grey_400_36dp"
    app:buttonText="アカウント"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_setting"
    tools:text="アカウント"/>

  <xyz.donot.roselinx.view.custom.CustomButton
    android:id="@+id/bt_search"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:buttonSrc="@drawable/wrap_search"
    app:buttonText="検索"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bt_account"/>
</android.support.constraint.ConstraintLayout>