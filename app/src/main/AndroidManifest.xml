<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.donot.roselin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".Roselin"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity
            android:name=".view.activity.OauthActivity"
            android:label="OauthActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="6a54bc1be9e7f263796a0d1ea143f2f29dcbd3fe" />

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.PictureActivity"
            android:label="@string/title_activity_picture"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.VideoActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.StreamService"
            android:exported="false" />

        <activity
            android:name=".view.activity.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.Translucent.User" />
        <activity
            android:name=".view.activity.SettingsActivity"
            android:label="SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.TweetEditActivity"
            android:label="@string/title_activity_tweet_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.TwitterDetailActivity"
            android:label="@string/title_activity_twitter_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.EditProfileActivity"
            android:label="EditProfileActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.TweetPostService"
            android:exported="false" />
        <service
            android:name=".service.SearchStreamService"
            android:exported="false" />
        <activity
            android:name=".view.activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.SearchSettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.BackImageActivity"
            android:label="@string/title_activity_back_image"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="xyz.donot.roselin.view.activity.BackImageActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.UserListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.TabSettingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="xyz.donot.roselin.view.activity.TabSettingActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.UserListsActivity"
            android:label="@string/title_activity_user_lists"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>